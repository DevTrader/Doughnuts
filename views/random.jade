extends layout

block content
  h1 random
   span hi

  h2 #{me}
  if(!conditional)
   each random in array
    li(style = 'font-size: #{random.size}px; color: #{random.color}') #{random._id}

  form(role='form', action="",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="color", placeholder='Enter Color')
      .form-group
        input.form-control(type='text', name="size", placeholder='size')
      button.btn.btn-default(type='submit') Submit